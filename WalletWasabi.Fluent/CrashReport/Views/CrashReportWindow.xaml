<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="using:Avalonia.Xaml.Interactivity"
        xmlns:behaviors="using:WalletWasabi.Fluent.Behaviors"
        xmlns:vm="using:WalletWasabi.Fluent.CrashReport.ViewModels"
        xmlns:controls="clr-namespace:WalletWasabi.Fluent.Controls"
        x:Class="WalletWasabi.Fluent.CrashReport.Views.CrashReportWindow"
        Width="600" Height="500"
        Title="{Binding Title}"
        x:CompileBindings="True"
        x:DataType="vm:CrashReportWindowViewModel"
        CanResize="False">
  <i:Interaction.Behaviors>
    <behaviors:CloseWindowCommandBehavior Command="{Binding OkCommand}" />
  </i:Interaction.Behaviors>
  <Panel>
    <controls:ContentArea Title="{Binding ReportTitle}"
                          EnableNext="True"
                          NextContent="Exit"
                          FocusNext="True">
      <DockPanel LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" Text="{Binding Details}"/>
        <TextBox Text="{Binding Message}" />
      </DockPanel>
    </controls:ContentArea>
  </Panel>
</Window>